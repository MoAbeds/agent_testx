rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USERS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- SITES ---
    // Anyone can read (for agent manifest), but only owner can create/edit
    match /sites/{siteId} {
      allow read: if true; 
      allow write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // --- PAGES ---
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // --- RULES ---
    match /rules/{ruleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // --- EVENTS ---
    // Only owner of the site can see events for that site
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if true; // Agents need to report
      allow update, delete: if request.auth != null;
    }

    // --- WEBHOOKS ---
    match /webhooks/{webhookId} {
      allow read, write: if request.auth != null;
    }
  }
}
