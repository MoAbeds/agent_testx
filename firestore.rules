rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- SITES ---
    // Critical: Only show sites where the userId exactly matches the logged-in user
    match /sites/{siteId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- EVENTS ---
    // Absolute Isolation: Only allow reading events if they belong to a site OWNED by the user
    match /events/{eventId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
      
      allow create: if true; // Agents need to report 404s
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
    }

    // --- USERS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- OTHER COLLECTIONS ---
    match /pages/{docId} { allow read, write: if request.auth != null; }
    match /rules/{docId} { allow read, write: if request.auth != null; }
    match /webhooks/{docId} { allow read, write: if request.auth != null; }
  }
}
