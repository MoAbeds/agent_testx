rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- SITES ---
    // User can ONLY see their own sites.
    match /sites/{siteId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- EVENTS ---
    // Critical: Only allow read if the siteId belongs to the current user.
    match /events/{eventId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
      
      allow create: if true; 
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
    }

    // --- USERS ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- OTHER COLLECTIONS (Locking down further) ---
    match /pages/{docId} { 
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
    }
    
    match /rules/{docId} { 
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
    }
    
    match /webhooks/{docId} { 
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/sites/$(resource.data.siteId)).data.userId == request.auth.uid;
    }
  }
}
